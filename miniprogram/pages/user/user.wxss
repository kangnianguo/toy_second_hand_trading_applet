.list_item_hover{
    transform: translateY(1rpx);
    opacity: 0.8;
}
.list_item .item_avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50rpx;
    background-color: red;
}
.list_item .item_name{
    margin-left: 20rpx;
    font-size: 28rpx;
    flex: 1;
}
.list_item .item_phone{
    width: 40rpx;
    height: 40rpx;
}
.index_list .list_item{
    background-color: #fff;
    padding: 20rpx;
    width: 100%;
    overflow: hidden;
    border-radius: 12rpx;
    border: 1px solid #f4f4f4;
    margin-bottom: 20rpx;
}
.list_item .item_image{
    width: 100%;
    height: 360rpx;
    border-radius: 12rpx;
}
.list_item .item_content{
    padding: 10rpx 0;
}
.item_content .content_title{
    font-size: 36rpx;

}
.item_content .content_address{
    font-size: 28rpx;
    margin-top: 5rpx;
    color: #999;
}