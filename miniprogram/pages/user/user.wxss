page{
  background-color: #f4f4f4;
}
.user_container{
    width: 100%;
    height: auto;
}
.top{
    width: 100%;
    display: flex;
    align-items: center;
    height: 320rpx;
    justify-content: center;
    border-bottom: 1px solid #eee;
    background-color: #fff;
}
.top .top_avatar{
    width: 160rpx;
    background-color: #eee;
    height: 160rpx;
    border-radius: 50%;
}
.top .top_nickName{
    font-size: 32rpx;
    margin-top: 10rpx;
}
.collections{
    margin: 20rpx auto 20rpx auto;
    width: 710rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    background-color: #fff;
    display: block;
    padding-top: 20rpx;
    border-radius: 12rpx;
    border: 1px solid #f4f4f4;
    overflow: hidden;
}
.collections .collection_title{
    height: 40rpx;
    position: relative;
    padding-left: 14rpx;
    line-height: 40rpx;
    font-size: 32rpx;
}
.collections .collection_title::before{
    content: "";
    height: 100%;
    width: 6rpx;
    background-color: red;
    position: absolute;
    left: 0;
}
.collection_list{
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
